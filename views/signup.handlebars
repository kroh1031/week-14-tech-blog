<div class="col-sm-8 container-fluid mt-5 border border-dark p-4">
      <form class="mb-4" id="signup-form">
        <div class="form-group mb-4">
             <h3 class="display-6">Sign Up</h3>
             <hr class="my-4">
          <label for="username" class="h5">Username</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter username"
            id="username-input-signup"
          />
        </div>
        <div class="form-group mb-4">
          <label for="password" class="h5">Password</label>
          <input type="password" class="form-control" placeholder="Password"
          id="password-input-signup" />
        </div>

        <input type="submit" value="Sign Up!" class="btn btn-dark w-100 mb-1" />
        <a href="/login" class="h6">Login instead</a>
      </form>
    </div>
    <script src="/js/signup.js"></script>