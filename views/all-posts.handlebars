<h1 class="text-center">ALL EXISTING POSTS</h1>
<div class="col-sm-8 container-fluid p-4">
{{#each posts as |post|}}
<div class="card border-success mb-3 " style="max-width: 100rem;">
  <div class="card-header bg-transparent border-success">Posted by {{user.username}} on{{post.createdAt}}</div>
  <div class="card-body text-success">
    <a href="/posts/{{post.id}}" class="card-title h5">{{post.title}}</a>
    <p class="card-text">{{post.body}}</p>
  </div>
</div>
{{/each}}
</div>