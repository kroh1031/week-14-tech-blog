{{!-- Create a box to create a new post --}}
<div class="col-sm-8 container-fluid mt-5 border border-dark p-4">
      <form class="mb-4">
        <div class="form-group mb-4">
          <h3 class="display-6">Create New Post</h3>
          <hr class="my-4">
          <label for="username" class="h5">Title</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter title"
          />
        </div>
        <div class="form-group mb-4">
          <label for="password" class="h5">Content</label>
          <input type="password" class="form-control" placeholder="Content" />
        </div>

        <input type="submit" value="Create" class="btn btn-success w-100 mb-1" />
      </form>
    </div>
