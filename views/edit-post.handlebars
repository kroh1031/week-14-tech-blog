{{!-- Create a box to edit an existing post --}}
<div class="col-sm-8 container-fluid mt-5 border border-dark p-4">
      <form class="mb-4" id="edit-form">
        <input type="hidden" id="post-id" value="{{post.id}}">
        <div class="form-group mb-4">
          <h3 class="display-6">Edit Post</h3>
          <hr class="my-4">
          <label for="title" class="h5">Title</label>
          <input
            type="text"
            class="form-control"
            value="{{post.title}}"
            id="title-input-post"
          />
        </div>
        <div class="form-group mb-4">
          <label for="content" class="h5">Content</label>
          <input type="text" class="form-control" value="{{post.body}}"
           id="content-input-post" />
        </div>

        <input type="submit" value="Update Post" class="btn btn-warning w-100 mb-1" />
        <input type="button" value="Delete" id="delete-btn" class="btn btn-danger w-100 mb-1"/>
      </form>
    </div>

<script src="/js/edit.js"></script>